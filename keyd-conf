[ids]

*

[main]

# Maps capslock to escape when pressed and control when held.
capslock = overload(control, esc)

# Remaps the escape key to capslock
esc = capslock

# Remaps the alt keys to meta
leftalt = layer(meta)
rightalt = layer(meta)

# Remaps the meta key to alt
leftmeta = layer(alt)
rightmeta = layer(alt)
